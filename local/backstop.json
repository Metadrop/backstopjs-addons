{
  "id": "backstop",
  "viewports": [
    {
      "label": "phone",
      "width": 375,
      "height": 667
    },
    {
      "label": "tablet",
      "width": 1024,
      "height": 768
    },
    {
      "label": "desktop",
      "width": 1600,
      "height": 900
    }
  ],
  "onBeforeScript": "onBefore.js",
  "onReadyScript": "onReady.js",
  "scenarios": [
    {
      "label": "Scenario name",
      "url": "http://something.com/page-url",
      "readySelector": "body",
      "scrollToSelector": ".paragraph.image-text.image-text--66-33.image-text--right",
      "login_wrapper": ".user-login-form",
      "user": "demo user",
      "pass": "1234",
      "login_redirect": "http://energies.ddev.site/en/node/20/edit",
      "clickSelector": ".sidebar-offcanvas__button:nth-child(1)",
      "postInteractionWait": 500,
      "waitForSelectorAfterInteraction": ".sidebar-offcanvas__content:not(.loading-content) .sidebar-offcanvas-item",
      "stopAnimationsSelectors": ".sidebar-offcanvas, .sidebar-offcanvas__menu"
    }
  ],
  "paths": {
    "bitmaps_reference": "bitmaps_reference",
    "bitmaps_test": "bitmaps_test",
    "engine_scripts": "engine_scripts",
    "html_report": "html_report",
    "ci_report": "ci_report"
  },
  "report": ["browser"],
  "engine": "puppeteer",
  "engineOptions": {
    "args": [
      "--ignore-certificate-errors",
      "--no-sandbox",
      "--disable-setuid-sandbox"
    ],
    "gotoParameters": { "waitUntil": "networkidle0" }
  },
  "asyncCaptureLimit": 8,
  "debug": false,
  "debugWindow": false,
  "custom": {
    "commonScriptsPath": "/src/tests/common"
  }
}
